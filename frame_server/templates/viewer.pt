<!DOCTYPE html>
<!DOCTYPE html>
<html lang="${request.locale_name}">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="pyramid web application">
    <meta name="author" content="Pylons Project">
    <link rel="shortcut icon" href="${request.static_url('frame_server:static/pyramid-16x16.png')}">

    <title>Simple viewer</title>
  </head>

  <body>
    <img src="http://localhost:6543/frame/4" id="frame-image"></img>
    <input type="range" id="slider" min="0" max="${frame_count}"></input>
    <label id="slider-value">unset</label>
  </body>

  <script src="//oss.maxcdn.com/libs/jquery/1.10.2/jquery.min.js"></script>
  <script>
   $("#slider").on(
     "input",
     function(event) {
       $("#slider-value").text(event.target.value);
       $("#frame-image").src = "http://localhost:6543/frame/0";
       $("#frame-image").attr({
         src: "http://localhost:6543/frame/" + event.target.value});
     });
  </script>
</html>
